<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mehequanna.gitawesome.LandingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo1"
        android:src="@drawable/landingbackground"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/landingText"
        android:textSize="48sp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorLightBackground"
        android:layout_marginTop="48dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/searchButton"
        android:text="@string/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loginButton"
        android:text="@string/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/zipEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryDarkBackground"
        android:textColorHint="@color/colorIcons"
        android:padding="10dp"
        android:inputType="number"
        android:hint="@string/searchZip"
        android:textAlignment="center"
        android:layout_above="@+id/searchButton"
        android:layout_toLeftOf="@+id/languageEditText"
        android:layout_toStartOf="@+id/languageEditText"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <EditText
        android:id="@+id/languageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/searchLanguage"
        android:background="@color/colorDarkBackground"
        android:textColorHint="@color/colorIcons"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/searchButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
