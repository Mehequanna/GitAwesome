<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/reposImageView"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="@string/github_avatar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoNameTextView"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="Repo Name"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Description"
            android:textSize="25sp"
            android:id="@+id/repoDescriptionTextView"
            android:layout_below="@+id/repoNameTextView"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created"
            android:textSize="20sp"
            android:id="@+id/repoCreatedTextView"
            android:layout_below="@+id/repoDescriptionTextView"
            android:textStyle="italic"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stars"
                android:textSize="20sp"
                android:id="@+id/repoStarsTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>